{{template "base" .}}

{{define "content"}}
{{$res := index .Data "reservation"}}
<div class="hero">
    <div class="hero-content text-center">
        <div class="max-w-screen p-5">
            <h1 class="text-5xl font-bold">Reservation Summary</h1>
            <div class="overflow-x-auto w-full">
                <table class="table w-full">
                    <!-- head -->
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Duration</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- row 1 -->
                        <tr>
                            <td>
                                <div class="flex items-center space-x-3">
                                    <div class="avatar">
                                        <div class="mask mask-squircle w-12 h-12">
                                            <img src="https://picsum.photos/200"
                                                alt="Avatar Tailwind CSS Component" />
                                        </div>
                                    </div>
                                    <div>
                                        <div class="font-bold">{{$res.FirstName}}</div>
                                        <div class="text-sm opacity-50">{{$res.LastName}}</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                1-3 Jan 2022
                                <br>
                                <span class="badge badge-ghost badge-sm">3 Days</span>
                            </td>
                            <td>{{$res.Email}}</td>
                            <td>{{$res.Phone}}</td>
                            <th>
                                <button class="btn btn-ghost btn-xs">details</button>
                            </th>
                        </tr>
                </table>
            </div>
        </div>
    </div>
</div>
{{end}}